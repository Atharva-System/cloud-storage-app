<div class="form-signin">
<%= form_for :user, :url => sessions_path, :html => {:onSubmit => "$.blockUI();"} do |f| %>
    <h2 class="form-signin-heading">Sign in / Sign up</h2>

    <%= f.text_field :email, :class => "input-block-level", :placeholder => "Email address" %>
    <%= f.password_field :password, :class => "input-block-level", :placeholder => "Password" %>

    <%= f.submit "Go!", :class => "btn btn-large btn-primary" %>
<% end %>
<hr />
<%= link_to(image_tag("facebook_connect.png"), "/auth/facebook", :onClick => "$.blockUI();") %>
</div>